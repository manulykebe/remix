generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  role     String
  events   Event[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id          Int       @id @default(autoincrement())
  date        DateTime
  eventType   String
  status      Status    @default(PENDING)
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Request {
  id     Int    @id @default(autoincrement())
  status String
}

enum Role {
  ADMIN
  USER
}

enum EventType {
  UNAVAILABLE
  PREFER_NOT
  HOLIDAY_REQUEST
  PREFERRED
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}